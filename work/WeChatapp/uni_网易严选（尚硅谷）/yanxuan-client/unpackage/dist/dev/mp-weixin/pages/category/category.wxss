.category-contanier .header {
  padding: 20rpx 0;
}
.category-contanier .header .search {
  width: 90%;
  margin: 0 auto;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #ccc;
  color: #333;
  text-align: center;
  border-radius: 8rpx;
}
.category-contanier .content {
  display: flex;
  border-top: 2rpx solid #333;
  height: calc(100vh - 102rpx);
}
.category-contanier .content .left {
  width: 20%;
  border-right: 2rpx solid #333;
}
.category-contanier .content .left .left-scroll {
  height: calc(100vh - 102rpx);
}
.category-contanier .content .left .left-scroll .nav-item {
  position: relative;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.category-contanier .content .left .left-scroll .nav-item.active::before {
  content: '';
  width: 2rpx;
  height: 34rpx;
  background-color: #f00;
  position: absolute;
  left: 10rpx;
  top: 17rpx;
}
.category-contanier .content .right {
  flex: 1;
}
.category-contanier .content .right .right-scroll {
  height: calc(100vh - 102rpx);
}
.category-contanier .content .right .right-scroll .cate-img {
  width: 520rpx;
  height: 200rpx;
  display: block;
  margin: 20rpx auto;
}
.category-contanier .content .right .right-scroll .goods-list {
  display: flex;
  flex-wrap: wrap;
}
.category-contanier .content .right .right-scroll .goods-list .goods-item {
  width: 33.333%;
  text-align: center;
  margin: 20rpx 0;
}
.category-contanier .content .right .right-scroll .goods-list .goods-item .goods-img {
  width: 90%;
  height: 140rpx;
}
.category-contanier .content .right .right-scroll .goods-list .goods-item .goods-name {
  font-size: 26rpx;
}

