@import '../common/index.wxss';

.cw-submit-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    -webkit-user-select: none;
    user-select: none;
    z-index: 100;
    background-color: #fff;
}

.cw-submit-bar__tip {
    padding: 10px;
    color: #f56723;
    font-size: 12px;
    line-height: 1.5;
    background-color: #fff7cc;
}

.cw-submit-bar__tip:empty {
    display: none;
}

.cw-submit-bar__tip-icon {
    width: 12px;
    height: 12px;
    margin-right: 4px;
    vertical-align: middle;
    font-size: 12px;
    min-width: 18px;
}

.cw-submit-bar__tip-text {
    display: inline;
    vertical-align: middle;
}

.cw-submit-bar__bar {
    display: -webkit-flex;
    display: flex;
    -webkit-align-items: center;
    align-items: center;
    -webkit-justify-content: flex-end;
    justify-content: flex-end;
    padding: 0 16px;
    height: 50px;
    font-size: 14px;
    background-color: #fff;
}

.cw-submit-bar__safe {
    height: constant(safe-area-inset-bottom);
    height: env(safe-area-inset-bottom);
}

.cw-submit-bar__text {
    -webkit-flex: 1;
    flex: 1;
    text-align: right;
    color: #323233;
    padding-right: 12px;
}

.cw-submit-bar__price,
.cw-submit-bar__text {
    font-weight: 500;
}

.cw-submit-bar__price {
    color: #ee0a24;
    font-size: 12px;
}

.cw-submit-bar__price-integer {
    font-size: 20px;
    font-family: Avenir-Heavy, PingFang SC, Helvetica Neue, Arial, sans-serif;
}

.cw-submit-bar__currency {
    font-size: 12px;
}

.cw-submit-bar__suffix-label {
    margin-left: 5px;
}

.cw-submit-bar__button {
    width: 110px;
    font-weight: 500;
}
