@import '../common/index.wxss';

.cw-slider {
    position: relative;
    border-radius: 999px;
    background-color: #ebedf0;
}

.cw-slider:before {
    position: absolute;
    right: 0;
    left: 0;
    content: '';
    top: -8px;
    bottom: -8px;
}

.cw-slider__bar {
    position: relative;
    border-radius: inherit;
    transition: width 0.2s;
    background-color: #1989fa;
}

.cw-slider__button {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
    background-color: #fff;
}

.cw-slider__button-wrapper {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translate3d(50%, -50%, 0);
}

.cw-slider--disabled {
    opacity: 0.5;
}
