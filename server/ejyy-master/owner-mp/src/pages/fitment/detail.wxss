.container.padding {
    padding-bottom: calc(constant(safe-area-inset-bottom) + 44px);
    padding-bottom: calc(env(safe-area-inset-bottom) + 44px);
}

.user-detail {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
}

.user-detail .avatar {
    width: 48px;
    height: 48px;
    border-radius: 50px;
    margin-right: 12px;
    overflow: hidden;
}

.user-detail .avatar .avatar-url {
    width: 100%;
    height: 100%;
}

.user-detail .main-info {
    text-align: left;
}

.user-detail .main-info .name {
    font-size: 14px;
    color: #333;
    line-height: 24px;
}

.user-detail .main-info .department {
    font-size: 12px;
    color: #666;
    line-height: 18px;
}

.btn {
    position: fixed !important;
    left: 0;
    right: 0;
    z-index: 50;
    bottom: constant(safe-area-inset-bottom);
    bottom: env(safe-area-inset-bottom);
}
