.container {
    padding-bottom: calc(constant(safe-area-inset-bottom) + 44px);
    padding-bottom: calc(env(safe-area-inset-bottom) + 44px);
}

.avatar-wrapper {
    width: 98px;
    height: 98px;
    margin: 40px auto;
    position: relative;
    overflow: hidden;
    border-radius: 50%;
}

.avatar-wrapper .avatar {
    width: 100%;
    height: 100%;
}

.avatar-wrapper .txt {
    font-size: 12px;
    color: #fff;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 30px;
    line-height: 30px;
    text-align: center;
    background: rgba(0, 0, 0, 0.5);
}

.get-phone {
    background-color: transparent;
    padding: 0;
    margin: 0;
    display: inline;
    color: #969799;
    font-size: 14px;
    line-height: 1;
    border: none;
}

.get-phone:after {
    border: none;
}

.fill-btn {
    margin-top: 8px;
    font-size: 12px;
    color: #999;
    text-align: right;
    padding: 0 12px;
    line-height: 24px;
    margin-bottom: 12px;
}

.btn {
    position: fixed !important;
    left: 0;
    right: 0;
    bottom: constant(safe-area-inset-bottom);
    bottom: env(safe-area-inset-bottom);
    z-index: 50;
}
