.container {
    height: 100vh;
    padding: 0 30rpx;
}

.nav-bar {
    background-color: transparent !important;
}

.nav-bar-title {
    color: #fff !important;
}

.logo-wrapper {
    height: 40%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 5;
    position: relative;
}

.logo {
    width: 240rpx;
    height: 240rpx;
    background: #fff;
    border-radius: 5px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 32rpx;
}

.logo image {
    width: 100%;
    height: 100%;
}

.logo-wrapper .txt {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #fff;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
}

.btn {
    z-index: 5;
    position: relative;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
}

.agreement {
    display: flex;
    flex-direction: row;
    margin-top: 12px;
    font-size: 12px;
    height: 16px;
    color: #fff;
    z-index: 5;
    position: relative;
}

.agreement .agree {
    margin-left: 10px;
}

.agreement navigator {
    text-decoration: underline;
}

.loading {
    margin-right: 12rpx;
    vertical-align: middle;
    margin-top: -12px;
}

.notice {
    position: relative;
    z-index: 5;
    margin-top: 30px;
}

.notice .title {
    font-size: 13px;
    color: #666;
    line-height: 22px;
    margin-bottom: 8px;
}

.notice .item {
    font-size: 13px;
    line-height: 22px;
    color: #777;
}

.notice .item .icon {
    font-size: 26rpx;
    margin-right: 16rpx;
    width: 32rpx;
    height: 32rpx;
    background-color: rgba(255, 255, 255, 0.3);
    text-align: center;
    border-radius: 50%;
    display: inline-block;
    line-height: 32rpx;
    color: #999;
}

.who-can-use {
    position: fixed;
    left: 0;
    right: 0;
    bottom: constant(safe-area-inset-bottom);
    bottom: env(safe-area-inset-bottom);
    color: #fff;
    text-align: center;
    font-size: 24rpx;
    line-height: 30rpx;
    padding-bottom: 22rpx;
    z-index: 5;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
}

.welcome {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
    display: flex;
    align-items: center;
}

.welcome image {
    height: 100%;
}
