.result {
    width: 90vw;
    border-radius: 6px;
    text-align: center;
    margin: 20px auto;
    color: #fff;
}

.result .icon {
    font-size: 48px;
    line-height: 140px;
}

.result .message {
    font-size: 14px;
    line-height: 20px;
}

.result navigator {
    font-size: 12px;
    margin-top: 8px;
    text-decoration: underline;
    padding-bottom: 22px;
}

.result.error {
    background-color: #ed4014;
}

.result.success {
    background-color: #19be6b;
}

.btn {
    position: fixed !important;
    left: 0;
    right: 0;
    z-index: 50;
    bottom: constant(safe-area-inset-bottom);
    bottom: env(safe-area-inset-bottom);
}
