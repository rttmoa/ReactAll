@import '../common/index.wxss';

.cw-progress {
    position: relative;
    height: 4px;
    border-radius: 4px;
    background: #ebedf0;
}

.cw-progress__portion {
    position: absolute;
    left: 0;
    height: 100%;
    border-radius: inherit;
    background: #1989fa;
}

.cw-progress__pivot {
    position: absolute;
    top: 50%;
    box-sizing: border-box;
    min-width: 3.6em;
    text-align: center;
    word-break: keep-all;
    border-radius: 1em;
    transform: translateY(-50%);
    color: #fff;
    padding: 0 5px;
    font-size: 10px;
    line-height: 1.6;
    background-color: #1989fa;
}
