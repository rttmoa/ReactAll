.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.card {
    width: 640rpx;
    background: #fff;
    border-radius: 4px;
    padding: 16px 12px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}

.card .user-info {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
}

.card .user-info .avatar {
    width: 38px;
    height: 38px;
    border-radius: 50%;
    margin-right: 12px;
    flex: none;
    background-color: rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
}

.card .user-info .avatar image {
    width: 36px;
    height: 36px;
    border-radius: 50%;
}

.card .user-info .name {
    font-size: 14px;
    color: #444;
    line-height: 26px;
}

.card .canvas {
    margin: 18px auto;
    width: 520rpx;
    height: 520rpx;
    background-color: #fff;
}

.card .notice {
    color: #888;
    font-size: 12px;
    text-align: center;
    margin-top: 12px;
}

.tongxin {
    width: 640rpx;
    margin-top: 20px;
    text-align: right;
    color: #2d8cf0;
    font-size: 12px;
}
