.container {
    padding-bottom: calc(constant(safe-area-inset-bottom) + 50px);
    padding-bottom: calc(env(safe-area-inset-bottom) + 50px);
}

.header-placeholder {
    background: #1989fa;
    height: 70px;
}

.header-wrapper {
    position: relative;
    padding: 0 20px;
    margin-top: -35px;
}

.header {
    border-radius: 8px;
    background: #fff;
}

.header .avatar {
    position: absolute;
    top: -33px;
    left: 50%;
    margin-left: -33px;
    width: 66px;
    height: 66px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
}
.header .avatar image {
    width: 60px;
    height: 60px;
    border-radius: 50%;
}

.header .info {
    padding-top: 45px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}

.header .info .name {
    font-size: 14px;
    color: #323333;
    line-height: 26px;
    margin-bottom: 6px;
}

.header .info .signature {
    font-size: 12px;
    color: #676765;
    line-height: 22px;
    padding: 0 30px;
}

.header .is-identity {
    position: absolute;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    top: -8px;
    right: 50%;
    margin-right: 60px;
    background: #fff;
    border: 1px solid #116bc5;
    padding: 0 18px 0 8px;
    border-radius: 8px;
}

.header .is-identity .icon {
    width: 24px;
    height: 24px;
    background: #fff;
    border-radius: 12px;
    border: 1px solid #116bc5;
    position: absolute;
    top: -4px;
    right: -8px;
    font-size: 14px;
    line-height: 22px;
    text-align: center;
}

.header .is-identity .identity {
    color: #009966;
}

.header .is-approve {
    position: absolute;
    height: 16px;
    line-height: 16px;
    font-size: 12px;
    top: -8px;
    left: 50%;
    margin-left: 60px;
    background: #fff;
    border: 1px solid #116bc5;
    padding: 0 8px 0 18px;
    border-radius: 8px;
}

.header .is-approve .icon {
    width: 24px;
    height: 24px;
    background: #fff;
    border-radius: 12px;
    border: 1px solid #116bc5;
    position: absolute;
    top: -4px;
    left: -8px;
    font-size: 14px;
    line-height: 22px;
    text-align: center;
}

.header .is-approve .approve {
    color: #ff9900;
}

.header .is-approve .txt,
.header .is-identity .txt {
    color: #116bc5;
}

.header .is-approve .unable,
.header .is-identity .unable {
    color: #999;
}

.header .self {
    margin-top: 12px;
    border-top: 1px solid #f5f5f5;
}

.header .self-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    color: #676765;
    padding: 12px 0;
}

.header .self-item .fill-icon {
    width: 38px;
    height: 38px;
    line-height: 38px;
    border-radius: 19px;
    color: #fff;
    font-size: 18px;
    margin-bottom: 8px;
    text-align: center;
}

.header .self-item .pay {
    background: #ff9933;
}

.header .self-item .maintain {
    background: #66cccc;
}

.header .self-item .report {
    background: #ff6666;
}

.header .self-item .pet {
    background: #1e7069;
    font-size: 22px;
}

.header .self-item .fitment {
    background-color: #0066cc;
}

.header .self-item .movecar {
    background-color: #339933;
}

.header .self-item .vistor {
    background-color: #99ccff;
}

.header .self-item .question {
    background-color: #9933cc;
}
