.footer {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.footer .price {
    font-size: 14px;
    color: #434343;
}

.footer .price .total {
    font-size: 16px;
    font-weight: 600;
    margin: 0 4px;
    display: inline;
}

.header {
    padding: 6px 0;
    border-bottom: 1px solid #ebedf0;
    margin-bottom: 12px;
}
