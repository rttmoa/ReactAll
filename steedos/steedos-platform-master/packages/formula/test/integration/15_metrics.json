      "name": "Temperature Conversion",
      "formula": "1.8 * degrees_celsius__c + 32",
      "suites": [
        {
          "context": "Positive Degrees",
          "identifiers": {
            "degrees_celsius__c": {
              "dataType": "number",
              "value": 24
            }
          },
          "expectedResult": {
            "dataType": "number",
            "value": 75.2
          }
        },
        {
          "context": "Negative Degrees",
          "identifiers": {
            "degrees_celsius__c": {
              "dataType": "number",
              "value": -40
            }
          },
          "expectedResult": {
            "dataType": "number",
            "value": -40
          }
        }
      ]
    },
