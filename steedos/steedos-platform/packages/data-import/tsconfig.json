{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2017",
        "noImplicitAny": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "stripInternal": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "outDir": "./lib",
        "newLine": "LF",
        "lib": [
            "es2017"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "removeComments": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
      "**/node_modules",
      "**/*.spec.ts"
    ]
  }
  