{
  "compilerOptions": { 
    "baseUrl": ".", // !解析非相关模块名称的基础目录
    "paths": { // !指定相对与baseURL选项计算的路径映射，使用webpack别名，智能感知路径
      "@/components/*": ["src/components/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/utils/*": ["src/utils/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/img/*": ["src/img/*"],
      "@/images/*": ["src/images/*"],
      "@/navs/*": ["src/navs/*"],
      "@/lib/*": ["src/lib/*"] 
    },
  },
}
