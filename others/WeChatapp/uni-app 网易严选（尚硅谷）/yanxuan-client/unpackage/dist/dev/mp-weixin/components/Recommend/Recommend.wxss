.recommend-container .banner {
  height: 350rpx;
}
.recommend-container .banner image {
  width: 100%;
  height: 350rpx;
}
.recommend-container .policy-list {
  display: flex;
  margin: 10rpx 0;
}
.recommend-container .policy-list .policy-item {
  flex: 1;
  text-align: center;
}
.recommend-container .policy-list .policy-item image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.recommend-container .policy-list .policy-item text {
  font-size: 26rpx;
}
.recommend-container .kingKong-module {
  display: flex;
  flex-wrap: wrap;
}
.recommend-container .kingKong-module .kingKong-item {
  width: 20%;
  text-align: center;
  margin: 6rpx 0;
}
.recommend-container .kingKong-module .kingKong-item image {
  width: 100rpx;
  height: 100rpx;
}
.recommend-container .kingKong-module .kingKong-item view {
  font-size: 26rpx;
}
.recommend-container .category-module {
  margin: 20rpx 0;
}
.recommend-container .category-module .category-item {
  margin-bottom: 20rpx;
}
.recommend-container .category-module .category-item .category-img {
  width: 100%;
  height: 370rpx;
}
.recommend-container .category-module .category-item .category-scroll {
  display: flex;
  flex-wrap: nowrap;
  height: 300rpx;
}
.recommend-container .category-module .category-item .category-scroll .goods-item {
  margin-left: 20rpx;
}
.recommend-container .category-module .category-item .category-scroll .goods-item .goods-img {
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f5f5;
}
.recommend-container .category-module .category-item .category-scroll .goods-item .goods-name {
  white-space: pre-wrap;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}
.recommend-container .category-module .category-item .category-scroll .more {
  width: 200rpx;
  height: 300rpx;
}

